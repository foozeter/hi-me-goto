<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/symbol_and_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/symbol"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/chunk_list_item_symbol_background"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Google Main Account On YouTube"
            android:textColor="@android:color/primary_text_light"
            android:textSize="20sp"
            android:typeface="monospace"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <android.support.design.chip.Chip
        android:id="@+id/chip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android studio"
        android:layout_below="@+id/symbol_and_title"
        android:layout_marginTop="24dp"/>

    <android.support.design.chip.Chip
        android:id="@+id/chip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="super market fantasy"
        android:layout_alignTop="@id/chip1"
        android:layout_toEndOf="@+id/chip1"
        android:layout_marginStart="8dp"/>

    <android.support.design.chip.Chip
        android:id="@+id/chip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="terminal heven's rock"
        android:layout_below="@+id/chip1"
        android:layout_marginTop="8dp"/>

    <android.support.design.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the pillows"
        android:layout_alignTop="@id/chip3"
        android:layout_toEndOf="@id/chip3"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+4"
        android:textSize="16sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_alignTop="@id/chip4"
        android:layout_toEndOf="@id/chip4"
        android:layout_alignBottom="@id/chip4"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"/>


</RelativeLayout>
